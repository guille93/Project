              <% if @randomdecision.date > DateTime.now %>
              <%= link_to '', vote_path(@randomdecision),:controller => :decisions, :action => :vote1, class: "glyphicon glyphicon-ok"%>
          </span>
          <% else %>
                  <%= "" %>
            <% end %>
           </p>
        </div>
         <div class="col-md-4 col-sm-4 option3">
            <div class="category">
              Categoría : <%= @randomdecision.category %>
            </div>
            <div class="date">
              Votación termina : <%= @randomdecision.date %>
            </div>
          </div>
     
