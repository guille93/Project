        <div class="col-md-4 col-sm-4 option1">
           <p class="name1"><%= @randomdecision.name_1 %></p>
           <img  class="decisionimage" src="<%= @randomdecision.image_1 %>">
          <p id="vote1">
           <%= @randomdecision.vote_1 %>
