<img class="fondo" src="<%= @user.fondo_url.to_s %>">
<div class="row">
	<div class="col-md-4 col-sm-4 user">
		<img id="userimg" src="<%= @user.avatar_url.to_s %>">
		<p>
		Usuario: <%= @user.first_name %> <%= @user.last_name %> 
		</p>
		<p>
		Email: <%= @user.email %> 
		</p>
		<p>
		Fecha de Registro: <%= @user.created_at %> 
		</p>
	</div>


	<div class="col-md-3 col-sm-3" id="show">
		<div id="titles">
		 Tus decisiones
		</div>
		<hr>
		<% @decisions.each do |decision| %>
			<li id="lista"><%= decision.name_1 %> Vs <%= decision.name_2 %> <%= link_to 'Mostrar', decision%> <%= link_to 'Eliminar', decision_path(decision), method: :delete, data: { confirm: 'Are you sure?' } %> </li>

		<% end %>
	</div>

	<div class="col-md-3 col-sm-3" id="show">
		<div id="titles">
			Tus Ãšltimas Decisiones 
		</div>
		
		<hr>

		<% @decisions.last_created_decisions(2).each do |decision| %>
			<li id="lista"><%= decision.name_1 %> Vs <%= decision.name_2 %> <%= link_to 'Mostrar', decision%> </li>
		<% end %>
	</div>
</div>